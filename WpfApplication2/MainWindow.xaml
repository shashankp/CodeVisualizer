    <Window.Resources>
        <SolidColorBrush Color="#FFE10000" x:Key="HighPriority" />
        <SolidColorBrush Color="#FF0C6BBF" x:Key="MedPriority" />
        <SolidColorBrush Color="YellowGreen" x:Key="LowPriority" />
        
        <telerik:RangeBrushCollection x:Key="ColorizerBrushes">
            <telerik:RangeBrush Brush="{StaticResource LowPriority}" From="0" To="2" />
            <telerik:RangeBrush Brush="{StaticResource MedPriority}" From="3" To="5" />
            <telerik:RangeBrush Brush="{StaticResource HighPriority}" From="6" To="100"  />
        </telerik:RangeBrushCollection>
