<Window x:Class="WpfApplication2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label x:Name="label" Content="TFS path" HorizontalAlignment="Left" VerticalAlignment="Top" Width="184"/>
        <TextBox x:Name="tbTfsPath" HorizontalAlignment="Left" Height="33" TextWrapping="Wrap" VerticalAlignment="Top" Width="396"/>

        <Label x:Name="label1" Content="Disk path" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-0.417,0.698" Width="71"/>
        <TextBox x:Name="tbSolutionPath" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" VerticalAlignment="Top" Width="396"/>

        <Button x:Name="button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Content="Get" Click="Button1_OnClick">
        </Button>

        <ScrollViewer>
            <TextBlock x:Name="tbResult" HorizontalAlignment="Left" VerticalAlignment="Top" Width="396"/>
        </ScrollViewer>
    </StackPanel>
</Window>
