            <telerik:RadTreeMap x:Name="treeMap1"
						ItemsSource="{Binding}"
						LayoutStrategy="Squarified"
						BorderThickness="1"
						BorderBrush="#FF5F031C">
        <telerik:RadTreeMap.TypeDefinitions>
            <!--TODO: ToolTipTemplate with name & score-->
            <telerik:TypeDefinition TargetTypeName="TfsItemViewModel"
									ValuePath="Size"
									LabelPath="Name"
									ToolTipPath="BugCount"
                                    ToolTipFormat="Score: {0}">
                <telerik:TypeDefinition.Mappings>
                    <telerik:ValueBrushColorizer IsAbsolute="True" ValuePath="BugCount"
                                                     RangeMinimum="0" RangeMaximum="100"
                                                     Brushes="{StaticResource ColorizerBrushes}" />
                </telerik:TypeDefinition.Mappings>
            </telerik:TypeDefinition>
        </telerik:RadTreeMap.TypeDefinitions>
    </telerik:RadTreeMap>
